<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOP|| Posh Boutique Uganda | Shop online, All your favorite designers for men and women</title>
    <script src="https://kit.fontawesome.com/451579efa6.js" crossorigin="anonymous"></script>
        <!-- Customized Bootstrap Stylesheet -->
        <link href="public/css/style.css" rel="stylesheet">
        <!-- main css file -->
    <link rel="stylesheet" href="/public/css/main-styles.css">
        <!-- Libraries Stylesheet -->
        <link href="public/lib/animate/animate.min.css" rel="stylesheet">
        <link href="public/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav>
            <a href="/"><h3>Posh Boutique</h3></a>
            <div class="nav-bars">
                <span></span>
                <span></span>
                <span></span>
            </div>  
            <div class="nav-links">
             <div class="links">
                <a href="#contact">Contact us</a>
                <a href="#shop">Shop</a>
                <a href="/offers">Offers</a>
                <a href="#categories">Categories</a>
             </div>  
            </div>  
        </nav>
        <div class="side-menu-links show-mobile-menu">
            <div class="side-bar">
                <div class="side-links">
                    <a href="#shop">Shop</a>
                    <a href="/offers">Offers</a>
                    <a href="#categories">Categories</a>
                    <a href="#contact">Contact us</a>
                </div>  
               </div>  

        </div>
    </header>

<main>
    <section class="featured-products" id="all-shop">    
        <!-- Products Start -->
        <div class="container-fluid pt-5 pb-3">
            <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">POSH BOUTIQUE</span></h2>
            <div class="row px-xl-5">
                <% allProducts.forEach(prod=>{ %>
                    <% const productId = prod.sys.id %>
                    <% const {productName,productPhoto,productCurrentPrice,productOldPrice}=prod.fields ;%>
                     <% const { url } = productPhoto.fields.file; %>
                     <% const imageUrl = `https:${url}` %>
                <div class="col-lg-3 col-md-4 col-sm-6 pb-1" id="<%=productId %>">
                    <div class="product-item bg-light mb-4">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="<%=imageUrl  %>" alt="">
                        </div>
                        <div class="text-center py-4">
                            <h6 class="h6 text-decoration-none text-truncate product-name"><%=productName %></h6>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>shs.<%=productCurrentPrice  %></h5><h6 class="text-muted ml-2"><del><%=productOldPrice %></del></h6>
                            </div>
                        <a href="#" class="order-product">Order <i class="fa fa-whatsapp" aria-hidden="true"></i> </a>
                        </div>
                    </div>
                </div>
              <%  }) %>
            </div>
        </div>
        <!-- Products End -->
    </section>
</main>    

<script src="/public/js/index.js"></script>

</body>    